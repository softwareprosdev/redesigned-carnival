{
  "name": "DentalProdigy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"bun run --filter=clinical dev\" \"bun run --filter=patient dev\"",
    "start": "concurrently \"bun run --filter=clinical start\" \"bun run --filter=patient start\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
